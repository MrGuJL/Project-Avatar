<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.heacewalker.avatar.demo.dao.AvatarDemoDAO">

	<sql id="table">AVATAR_TABLE</sql>

	<resultMap id="demoEntity" type="com.heacewalker.avatar.demo.entity.AvatarDemo">
		<id property="id" column="id"/>
		<result column="schema_id" property="schemaId"/>
		<result column="table_name" property="tableName"/>
		<result column="table_comment" property="tableComment"/>
		<result column="object_remark" property="objectRemark"/>
		<result column="modify_user" property="modifyUser"/>
		<result column="modify_date_time" property="modifyDateTime"/>
	</resultMap>

	<insert id="insert" parameterType="com.heacewalker.avatar.demo.entity.AvatarDemo">
		INSERT INTO 
		<include refid="table"/>
		( schema_id, table_name, table_comment, object_remark, modify_user, modify_date_time )
		VALUES
		( #{schemaId}, #{tableName}, #{tableComment}, #{objectRemark}, #{modifyUser}, #{modifyDateTime} )
	</insert>
</mapper>